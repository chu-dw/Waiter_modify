<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">  <!-- edit text 설정-->
        <item name="colorControlNormal">#B22222</item> <!-- non focused line color -->
        <item name="colorControlActivated">#AA2233</item> <!-- focused line color -->
        <item name="android:editTextColor">#000000</item>  <!-- text color -->
        <item name="android:textColorHighlight">#03A9F4</item> <!-- selected text color -->
        <item name="android:textColorHint">#555555</item>   <!-- hint color -->
    </style>
</resources>